{
  "name": "scribe-papyrus",
  "displayName": "Scribe Papyrus",
  "description": "VSCode extension for compiling Papyrus scripts with YAML configuration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Task Runners"
  ],
  "keywords": [
    "papyrus",
    "skyrim",
    "compilation",
    "modding"
  ],
  "activationEvents": [
    "onCommand:scribe.compile",
    "onCommand:scribe.compileNoCache",
    "onCommand:scribe.check",
    "onCommand:scribe.compileCurrent",
    "workspaceContains:**/project.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scribe.compile",
        "title": "Compile Papyrus Scripts",
        "category": "Scribe"
      },
      {
        "command": "scribe.compileNoCache",
        "title": "Compile Papyrus (No Cache)",
        "category": "Scribe"
      },
      {
        "command": "scribe.check",
        "title": "Check Papyrus Syntax",
        "category": "Scribe"
      },
      {
        "command": "scribe.compileCurrent",
        "title": "Compile Current Papyrus File",
        "category": "Scribe"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "scribe.compile",
          "group": "scribe@1",
          "when": "resourceExtname == .psc"
        },
        {
          "command": "scribe.check",
          "group": "scribe@2",
          "when": "resourceExtname == .psc"
        },
        {
          "command": "scribe.compileCurrent",
          "group": "scribe@3",
          "when": "resourceExtname == .psc"
        }
      ]
    },
    "taskDefinitions": [
      {
        "type": "papyrus",
        "required": [],
        "properties": {
          "task": {
            "type": "string",
            "enum": ["compile", "check"],
            "description": "The Papyrus task to run"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "papyrus",
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s*(error|warning|info):\\s*(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "owner": "papyrus",
        "source": "papyrus",
        "applyTo": "allDocuments"
      }
    ],
    "languages": [
      {
        "id": "papyrus",
        "aliases": ["Papyrus", "papyrus"],
        "extensions": [".psc"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1"
  }
}
